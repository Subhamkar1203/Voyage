# ─── Training container ───
FROM python:3.11-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY src/ src/
COPY data/raw/ data/raw/

RUN mkdir -p outputs/models

CMD ["python", "-c", "from src.training.train_flight_price import run; run(); from src.training.train_flight_classifier import run; run(); from src.training.train_recommendation import run; run()"]
